!!!Doctype
%html
  %head
    %meta{name: "viewport", content:"width=device-width, initial-scale=1"}
    = stylesheet_link_tag "loggedout", media: "all", "data-turbolinks-track" => true
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Average+Sans|Open+Sans:300italic,400italic,600italic,700italic,800italic,400,700,600,300,800', media: 'all'
    
    = csrf_meta_tags
  %body
    .container-fluid
      .row-fluid
        .row-fluid
          .static-box
            %h2 Setup your account
            = form_tag 'create', class: "form-horizontal" do
              .control-group
                .control
                  = text_field :user, :password
              .control-group
                .control
                  = text_field :user, :password_confirmation
              .control-group
                .control
                  = submit_tag 'Create', class: 'btn btn-primary'